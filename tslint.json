{
	"extends": [
		"tslint:recommended",
		"tslint-react",
		"tslint-config-prettier"
	],
	"linterOptions": {
		"exclude": [
			"config/**/*.js",
			"node_modules/**/*.ts",
			"coverage/lcov-report/*.js"
		]
	},
	"rules": {
		"interface-name": [
			true,
			"never-prefix"
		],
		"quotemark": [
			true,
			"single",
			"jsx-double"
		],
		"no-console": true,
		"no-default-export": false,
		"object-literal-sort-keys": false,
		"no-unused-expression": [
			true,
			"allow-fast-null-checks"
		]
	}
}
